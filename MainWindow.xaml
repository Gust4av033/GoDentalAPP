<Window x:Class="GoDentalAPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GoDentalAPP"
        Title="GoDentalAPP" Height="600" Width="800">
    <DockPanel>
        <!-- Menú superior -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Entidades">
                <MenuItem Header="Clientes" Command="{Binding ShowClientesCommand}" />
                <MenuItem Header="Productos" Command="{Binding ShowProductosCommand}" />
                <MenuItem Header="Ventas" Command="{Binding ShowVentasCommand}" />
            </MenuItem>
        </Menu>

        <!-- Contenido dinámico -->
        <ContentControl Content="{Binding CurrentView}" />
    </DockPanel>
</Window>